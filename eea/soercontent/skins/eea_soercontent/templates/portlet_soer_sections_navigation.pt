<html>
<body>
<div class="eea-accordion-panels eea-accordion-panels-soer" metal:define-macro="portlet">
<tal:defines tal:define="plone_view context/@@plone;
        portal_state context/@@plone_portal_state;
        portal_url portal_state/portal_url;
        view nocall:plone_view;
        body_class python:plone_view.bodyClass(template, view);">



    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span>
          <a class="eea-icon eea-icon-home eea-icon-lg" tal:attributes="href string:$portal_url/soer-2015">SOER 2015</a>
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <!--? Synthesis report -->
    <div class="eea-accordion-panel bg-soer-synthesis-medium">
        <h3 tal:define="klass python:'eea-accordion-title-manual-icons bg-soer-synthesis '"
            tal:attributes="class python:klass + 'current' if 'section-synthesis' in body_class else klass">
        <span class="title">Synthesis report</span>
           <span class="eea-icon eea-icon-clipboard eea-icon-lg eea-icon-right eea-icon-fw"></span>
        </h3>
        <div class="pane">
            <ul class="block-list">
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015">
                        <span>Key messages</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015">
                        <span>Chapter 1: the state of the environment in Europe</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015">
                        <span>Chapter 2: climate change</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015">
                        <span>Chapter ...</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!--? Global megatrends -->
    <div class="eea-accordion-panel bg-soer-megatrends-medium">
        <h3 tal:define="klass python:'eea-accordion-title-manual-icons bg-soer-megatrends '"
            tal:attributes="class python:klass + 'current' if 'section-global' in body_class else klass">
            <span class="title">Global Megatrends</span>
            <span class="eea-icon eea-icon-globe eea-icon-lg eea-icon-right eea-icon-fw"></span>
        </h3>
        <div class="pane">
            <ul class="block-list">
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/global/demography">
                        <span>Demography</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/global/urbanisation"
                       title="Over the last decades, continuous urban expansion at rates much higher than population growth has resulted in a massive urban footprint on Europe.">
                        <span>Urban growth</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/global/health">
                        <span>Health</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/global/technology">
                        <span>Technology</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/global/economic">
                        <span>Economic</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/global/trade">
                        <span>Trade</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/global/competition">
                        <span>Competition</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/global/resources">
                        <span>Ecosystems</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/global/climate">
                        <span>Climate</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/global/pollution">
                        <span>Pollution</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/global/governance">
                        <span>Governance</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>


    <!--? european thematic -->
    <div class="eea-accordion-panel bg-soer-thematic-medium">
        <h3 tal:define="klass python:'eea-accordion-title-manual-icons bg-soer-thematic '"
            tal:attributes="class python:klass + 'current' if 'section-europe' in body_class else klass">
            <span class="title">Thematic briefings</span>
            <span class="eea-icon eea-icon-flask eea-icon-lg eea-icon-right eea-icon-fw"></span>
        </h3>
        <div class="pane">
            <ul class="block-list">
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/europe/air">
                        <span>Air</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/europe/mitigating-climate-change">
                        <span>Mitigating climate change</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/europe/the-air-and-climate-system">
                        <span>The air and climate system</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/europe/biodiversity">
                        <span>Biodiversity</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/europe/forests">
                        <span>Forests</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/europe/agriculture">
                        <span>Agriculture</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/europe/freshwater">
                        <span>Freshwater</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/europe/maritime-activities">
                        <span>Maritime activities</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/europe/marine-and-coastal">
                        <span>Marine and coastal environment</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/europe/hydrological-systems">
                        <span>Hydrological systems and sustainable water management</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/europe/folder_listing" title="List all items">
                        <span>List all</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!--? Cross country -->
    <div class="eea-accordion-panel bg-soer-country-medium">
        <h3 tal:define="klass python:'eea-accordion-title-manual-icons bg-soer-country '"
            tal:attributes="class python:klass + 'current' if 'section-countries-comparison' in body_class else klass">
            <span class="title">Cross-country comparisons</span>
            <span class="eea-icon eea-icon-bar-chart-o eea-icon-lg eea-icon-right eea-icon-fw"></span>
        </h3>
        <div class="pane">
            <ul class="block-list">
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries-comparison/air" title="IMPORTANT: This fiche provides a cross-country comparison focusing only on substances that contribute to acidification, eutrophication, formation of ground-level ozone and secondary particulate matter. ">
                        <span>Air pollution</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries-comparison/climate-change-mitigation" title="IMPORTANT: This fiche provides a cross-country comparison focusing only on greenhouse gas emissions.">
                        <span>Climate change mitigation</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries-comparison/energy">
                        <span>Energy</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries-comparison/transport" title="IMPORTANT: This fiche provides a cross-country comparison focusing only on passenger transport demand and modal split. ">
                        <span>Transport</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries-comparison/biodiversity" title="IMPORTANT: This fiche provides a cross-country comparison focusing only on protected areas. ">
                        <span>Biodiversity</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries-comparison/agriculture" title="IMPORTANT: This fiche provides a cross-country comparison focusing only on organic farming.">
                        <span>Agriculture</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries-comparison/freshwater">
                        <span>Freshwater</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries-comparison/resource-efficiency" title="IMPORTANT: This fiche provides a cross-country comparison focusing only on resource use and resource productivity.">
                        <span>Resource efficiency</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries-comparison/waste" title="IMPORTANT: This fiche provides a cross-country comparison focusing only municipal solid waste generation and management.">
                        <span>Waste</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>


    <!--? countries -->
    <div class="eea-accordion-panel bg-soer-regions-medium">
        <h3 tal:define="klass python:'eea-accordion-title-manual-icons bg-soer-regions '"
            tal:attributes="class python:klass + 'current' if 'section-countries ' in body_class else klass">
            <span class="title">Country briefings</span>
            <span class="eea-icon eea-icon-map-marker eea-icon-lg eea-icon-right eea-icon-fw"></span>
        </h3>
        <div class="pane">
            <ul class="block-list">
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries/austria">
                        <span>Austria</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries/albania">
                        <span>Albania</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries/belgium">
                        <span>Belgium</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries/bulgaria">
                        <span>Bulgaria</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries/croatia">
                        <span>Croatia</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries/cyprus">
                        <span>Cyprus</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries/czech-republic">
                        <span>Czech Republic</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries/denmark">
                        <span>Denmark</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries/estonia">
                        <span>Estonia</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries/kosovo">
                        <span>Kosovo under UN SCR 1244/99</span>
                    </a>
                </li>
                <li>
                    <a tal:attributes="href string:$portal_url/soer-2015/countries/folder_listing" title="List all items">
                        <span>List all</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

</tal:defines>
</div>

</body>
</html>
